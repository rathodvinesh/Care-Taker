<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.ProfileFragment"
        tools:ignore="MissingClass">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="109dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:gravity="center_horizontal"
            android:text="Update Profile"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="141dp"
            android:layout_height="129dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/baseline_person_24" />

        <!--        <com.theartofdev.edmodo.cropper.CropImageView-->
        <!--            xmlns:custom="http://schemas.android.com/apk/res-auto"-->
        <!--            android:id="@+id/cropImageView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_weight="1"-->
        <!--            custom:aspectRatioX="1" />-->

        <Button
            android:id="@+id/editProfileClient"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="205dp"
            android:backgroundTint="@color/button_color"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Edit Picture"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="  Enter your name "
            android:inputType="text"
            android:paddingStart="12sp"
            android:textColor="@color/black"
            android:textColorHint="@color/stroke_for_button"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="288dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Name:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="358dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Age:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="age"
            android:inputType="text"
            android:paddingStart="12sp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="@color/stroke_for_button"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="192dp"
            android:layout_marginTop="358dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Gender:"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioBtnGenderUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:layout_marginTop="345dp"
            android:backgroundTint="@color/button_color"
            android:checkedButton="@id/radioButtonMale"
            android:foregroundTint="@color/button_color"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/button_color"
                android:checked="true"
                android:fontFamily="@font/source_serif_pro"
                android:text="M"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/button_color"
                android:fontFamily="@font/source_serif_pro"
                android:text="F"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="435dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Contact:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="10 digit number"
            android:inputType="phone"
            android:paddingStart="12sp"
            android:textColor="@color/black"
            android:textColorHint="@color/stroke_for_button"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="519dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Address:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="600dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Location:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextlocation"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="595dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="Enter your location"
            android:inputType="text"
            android:paddingStart="12sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextPostalAddress"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="507dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="Enter your Address"
            android:inputType="textPostalAddress"
            android:paddingStart="12sp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextAilment"
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="670dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:gravity="start|top"
            android:hint="Enter your ailment"
            android:inputType="textMultiLine"
            android:paddingStart="15sp"
            android:paddingTop="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="680dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Suffering from:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="790dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/button_color"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Update"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </FrameLayout>
</ScrollView>