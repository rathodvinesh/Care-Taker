<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.ProfileFragment">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="109dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:gravity="center_horizontal"
            android:text="Update Profile"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="141dp"
            android:layout_height="129dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/baseline_person_24" />

        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="205dp"
            android:backgroundTint="@color/button_color"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Edit Picture"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="  Enter your name "
            android:inputType="text"
            android:paddingStart="2sp"
            android:textColor="@color/black"
            android:textColorHint="@color/stroke_for_button"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="288dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Name:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="358dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Age:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="age"
            android:inputType="text"
            android:paddingStart="2sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/stroke_for_button"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="192dp"
            android:layout_marginTop="358dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Gender:"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioBtnGenderUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="270dp"
            android:layout_marginTop="345dp">

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/button_color"
                android:fontFamily="@font/source_serif_pro"
                android:text="M"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/button_color"
                android:fontFamily="@font/source_serif_pro"
                android:text="F"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="468dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Contact:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="460dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="10 digit number"
            android:inputType="phone"
            android:paddingStart="10sp"
            android:textColor="@color/black"
            android:textColorHint="@color/stroke_for_button"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="539dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Address:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="615dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Location:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextlocation"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="610dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="Enter your location"
            android:inputType="text"
            android:paddingStart="5sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextPostalAddress"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:hint="Enter your Address"
            android:inputType="textPostalAddress"
            android:paddingStart="5sp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextAilment"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="680dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:gravity="start|top"
            android:hint="Enter your ailment"
            android:inputType="textMultiLine"
            android:paddingStart="15sp"
            android:paddingTop="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="685dp"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Suffering from:"
            android:textAlignment="center"
            android:textColor="@color/button_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="288dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="760dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/button_color"
            android:fontFamily="@font/source_serif_pro_bold"
            android:text="Update"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </FrameLayout>
</ScrollView>